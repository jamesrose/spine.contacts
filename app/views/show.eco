<header>
  <a class="edit">Edit</a>
</header>

<div class="content">
  
  <div style="float: right; width: 400px; margin: 10px">
    <p>
    <% if @lat and @lon: %>
    <img src="http://maps.googleapis.com/maps/api/staticmap?center=<%= @lat %>,<%= @lon %>&zoom=15&size=400x400&sensor=false">
    <% end %>
    </p>
  </div>
  
  <div>
    <h2><%= @name %></h2>
    <p><%= @email %></p>
    <p><%= @mobile %></p>
  
    <p id="notes"><%= @notes %></p>
  </div>

</div>